{
    "compilerOptions": {
		"types": ["@pexip/plugin-api/experimentalTypes"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        // "incremental": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    },
    "include": ["src", "test", "@types", "../../@types"],
    "exclude": [
        "**/node_modules/*",
        "**/dist/*",
        "**/cypress/*",
        "**/.eslintrc.js"
    ]
}
